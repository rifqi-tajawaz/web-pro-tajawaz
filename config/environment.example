# ================================================================
# TAJAWAZ SOLUTIONS - ENVIRONMENT CONFIGURATION TEMPLATE
# ================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ================================================================
# APPLICATION SETTINGS
# ================================================================
APP_NAME="Tajawaz Solutions"
APP_URL="https://www.tajawaz.my.id"
APP_ENV="production"

# ================================================================
# EMAIL CONFIGURATION
# ================================================================
# Primary email for receiving contact form submissions
CONTACT_EMAIL="hello@markoagency.com"
FROM_EMAIL="noreply@tajawaz.my.id"

# SMTP Settings (Optional - for advanced email sending)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USERNAME="your-username"
SMTP_PASSWORD="your-password"
SMTP_ENCRYPTION="tls"

# ================================================================
# DATABASE CONFIGURATION (if needed)
# ================================================================
# DB_HOST="localhost"
# DB_PORT="3306"
# DB_NAME="tajawaz_db"
# DB_USERNAME="your-db-username"
# DB_PASSWORD="your-db-password"

# ================================================================
# ANALYTICS & TRACKING
# ================================================================
GOOGLE_ANALYTICS_ID="G-9RN86C26LP"

# ================================================================
# SECURITY
# ================================================================
# Session lifetime in minutes
SESSION_LIFETIME="120"

# ================================================================
# PWA SETTINGS
# ================================================================
PWA_CACHE_VERSION="v4.3.2"
OFFLINE_PAGE="/pwa/offline.html"

# ================================================================
# RATE LIMITING (Optional)
# ================================================================
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_REQUESTS="10"
RATE_LIMIT_PERIOD="60"

# ================================================================
# DEBUG & LOGGING
# ================================================================
DEBUG_MODE="false"
ERROR_REPORTING="E_ALL"
DISPLAY_ERRORS="0"
LOG_ERRORS="1"
ERROR_LOG_PATH="/var/log/php/errors.log"
